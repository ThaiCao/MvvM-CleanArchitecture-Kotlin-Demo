    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Divider.Large">
        <item name="android:layout_height">@dimen/divider_size_large</item>
        <item name="android:background">?attr/colorDivider</item>
    </style>

    <style name="Divider.Small">
        <item name="android:layout_height">@dimen/divider_size_small</item>
        <item name="android:background">?attr/colorDivider</item>
