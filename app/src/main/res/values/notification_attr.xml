<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="themeNotificationInfoBackgroundColor" format="reference" />
    <attr name="themeNotificationSuccessBackgroundColor" format="reference" />
    <attr name="themeNotificationAlertBackgroundColor" format="reference" />
    <attr name="themeNotificationInfoIconColor" format="reference" />

    <declare-styleable name="CustomNotificationLayout">
        <attr name="type" format="enum">
            <enum name="info" value="0"/>
            <enum name="success" value="1"/>
            <enum name="alert" value="2"/>
        </attr>
        <attr name="message" format="string" />
    </declare-styleable>

</resources>