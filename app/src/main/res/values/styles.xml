    <!--   Buttons   -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:padding">@dimen/btn_padding_medium</item>
        <item name="android:fontFamily">?fontButton</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary_bg_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_primary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Primary.Inverse">
        <item name="android:background">@drawable/btn_primary_inverse_bg_selector</item>
        <item name="android:textColor">@drawable/btn_primary_inverse_text_selector</item>
        <item name="android:padding">@dimen/btn_padding_medium</item>
    </style>

    <style name="Button.Primary.Coupon">
        <item name="android:background">@drawable/btn_primary_bg_border_right_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_primary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Primary.Small">
        <item name="android:layout_height">@dimen/btn_height_small</item>
        <item name="android:padding">@dimen/btn_padding_small</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/btn_secondary_bg_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_secondary_text_selector</item>
        <item name="android:padding">@dimen/btn_padding_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary.Inverse">
        <item name="android:background">@drawable/btn_secondary_inverse_bg_selector</item>
        <item name="android:textColor">@drawable/btn_secondary_inverse_text_selector</item>
    </style>

    <style name="Button.Secondary.Small">
        <item name="android:layout_height">@dimen/btn_height_small</item>
        <item name="android:padding">@dimen/btn_padding_small</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
    </style>

    <style name="Button.Surface">
        <item name="android:background">@drawable/btn_primary_bg_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_primary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Surface.Inverse.NoBorder">
        <item name="android:background">@drawable/btn_secondary_no_border_bg_selector</item>
        <item name="android:textColor">@drawable/btn_secondary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Error">
        <item name="android:background">@drawable/btn_error_bg_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_error_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Error.Inverse">
        <item name="android:background">@drawable/btn_error_inverse_bg_selector</item>
        <item name="android:textColor">@drawable/btn_error_inverse_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="FieldLabel.Optional">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_large</item>
        <item name="android:textColor">@drawable/text_field_text_selector</item>
        <item name="android:textColorHint">?themeTextFieldColorHint</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="Text.Error">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
        <item name="android:textColor">?themeTextFieldError</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Error.Strong">
        <item name="android:fontFamily">?fontTitleSemiBold</item>
    </style>

    <style name="FieldLabel">
        <item name="android:fontFamily">?fontTitleSemiBold</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
        <item name="android:textColor">?themeFieldLabelColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="QuantityText" parent="Paragraph.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/quantity_box_bg</item>
        <item name="android:textColor">?themeTextColorQuantity</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textAppearance">@style/Paragraph.Medium</item>
    </style>

    <!-- Tab -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?themeColorAccent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabBackground">@drawable/bg_tab</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">?tabSelectedTextColor</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">?fontTitleHeader</item>
        <item name="android:textSize">@dimen/text_size_title_header</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">?tabTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">?fontTitleBold</item>
        <item name="android:textSize">@dimen/text_size_title_header</item>
    </style>

    <style name="Toggle">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track</item>
    </style>

    <style name="CardView.Custom">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="CardView.Flat" parent="CardView.Custom">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/greyLighter2</item>
        <item name="strokeWidth">@dimen/border_thin</item>
    </style>

    <style name="Card">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:translationZ">@dimen/elevation</item>
    </style>

    <style name="Card.TopCorner">
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/card_top_corner_bg</item>
    </style>

    <style name="CardHomeCategory">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:translationZ">@dimen/elevation</item>
    </style>

    <style name="RadioButton" parent="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:button">@drawable/radio_btn_selector</item>
    </style>

    <style name="RadioButton.OnSurface" />

    <!-- BottomNavigationView !-->
    <style name="BottomNavigationTextStyleActive">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textColor">?themeMenuNavSelectedColor</item>
        <item name="android:textSize">@dimen/text_size_paragraph_small</item>
    </style>

    <style name="BottomNavigationTextStyleInActive">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textColor">?themeMenuNavTextColor</item>
        <item name="android:textSize">@dimen/text_size_paragraph_small</item>
    </style>

    <style name="ItemPickerStyle">
        <item name="android:fontFamily">?fontParagraphSemiBold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_title_header</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="BaseThemeBottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="MenuItemPricePre">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_paragraph_tiny</item>
    </style>

    <style name="BackgroundClickable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ForegroundClickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DialogBottomToTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="DialogLeftToRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="Button.Surface.Inverse">
        <item name="android:background">@drawable/btn_secondary_bg_selector</item>
        <item name="android:textColor">@drawable/btn_secondary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ToppingItemCalories">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_paragraph_tiny</item>
    </style>

    <style name="HutRewardButton">
        <item name="android:background">@drawable/btn_tertiary_bg_selector</item>
        <item name="textInputStyle">@style/Paragraph.Medium.Strong</item>
        <item name="android:textColor">@drawable/btn_primary_text_selector</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>
