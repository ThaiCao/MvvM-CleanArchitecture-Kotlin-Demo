<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/choice_size"
                android:height="@dimen/choice_size" />
            <stroke
                android:width="@dimen/border_thin"
                android:color="?themeColorAccent" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/radio_inset_padding"
        android:left="@dimen/radio_inset_padding"
        android:right="@dimen/radio_inset_padding"
        android:top="@dimen/radio_inset_padding">
        <shape android:shape="oval">
            <solid android:color="?themeColorAccent" />
        </shape>
    </item>
</layer-list>
