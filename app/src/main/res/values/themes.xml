<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="themeBackgroundChangeDispositionInfo">@color/white</item>

        <item name="fontTitleBold">@font/sharp_sans_bold</item>
        <item name="fontTitleHeader">@font/sharp_sans_bold</item>
        <item name="fontTitleSemiBold">@font/sharp_sans_semi_bold</item>
        <item name="fontButton">@font/open_sans_semi_bold</item>
        <item name="fontParagraphRegular">@font/open_sans_regular</item>
        <item name="fontParagraphSemiBold">@font/open_sans_semi_bold</item>
        <item name="fontParagraphLarge">@font/open_sans_regular</item>

        <item name="themeColorPrimary">@color/core3</item>
        <item name="themeTextColorPrimary">@color/core2</item>
        <item name="themeBackgroundPrimary">?themeColorPrimary</item>
        <item name="themeBackgroundSecondary">@color/greyLighter4</item>
        <item name="themeBackgroundWarning">@color/infoBg</item>
        <item name="themeColorError">@color/core1</item>
        <item name="themeColorShape">@color/greyLighter1</item>
        <item name="themeBgToast">@color/modalBg</item>

        <!-- Button -->
        <item name="themeTextColorButtonPrimary">@color/core3</item>
        <item name="themeTextColorButtonSecondary">?themeBackgroundButton</item>
        <item name="themeTextColorButtonSecondaryOverDown">?themeBackgroundButtonOverDown</item>
        <item name="themeTextColorButtonUnready">@color/grey</item>
        <item name="themeBackgroundButton">@color/extra1</item>
        <item name="themeBackgroundButtonOverDown">@color/extra2</item>
        <item name="themeBackgroundButtonSecondary">@color/core3</item>
        <item name="themeBackgroundButtonUnready">@color/greyLighter3</item>

    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="LoadingTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@drawable/primary_text_selector</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">normal</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">?fontTitleBold</item>
    </style>

    <style name="Text.Title.Header">
        <item name="android:fontFamily">?fontTitleHeader</item>
        <item name="android:textSize">@dimen/text_size_title_header</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Title.Large.Error">
        <item name="android:textColor">?themeColorError</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Text.Title.Small">
        <item name="android:fontFamily">?fontTitleSemiBold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Title.Tiny">
        <item name="android:fontFamily">?fontTitleSemiBold</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Paragraph" parent="Text" />

    <style name="Paragraph.Large">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_large</item>
    </style>

    <style name="Paragraph.Medium">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_medium</item>
    </style>

    <style name="Paragraph.Medium.ClickAble">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Paragraph.Medium.Link">
        <item name="android:textColor">?themeTextLinkColor</item>
    </style>

    <style name="Paragraph.Medium.Link.ClickAble">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Paragraph.Medium.Strong">
        <item name="android:fontFamily">?fontParagraphSemiBold</item>
    </style>

    <style name="Paragraph.Small">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_small</item>
    </style>

    <style name="Paragraph.Tiny">
        <item name="android:fontFamily">?fontParagraphRegular</item>
        <item name="android:textSize">@dimen/text_size_paragraph_tiny</item>
    </style>

    <style name="Paragraph.Tiny.Strong">
        <item name="android:fontFamily">?fontParagraphSemiBold</item>
    </style>

    <style name="Paragraph.Medium.Error">
        <item name="android:textColor">?themeColorError</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:padding">@dimen/btn_padding_medium</item>
        <item name="android:fontFamily">?fontButton</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary_bg_selector</item>
        <item name="android:textSize">@dimen/btn_label_medium</item>
        <item name="android:textColor">@drawable/btn_primary_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="CardView.Custom">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>
</resources>