<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItemView"
    style="@style/CardView.Custom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.structure.uibase.widget.image.CustomRatioImageView
            android:id="@+id/iv_thumb"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            app:ratio="152:95"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            style="@style/Text.Title.Small.OnSecondary.Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_thumb"
            android:layout_alignEnd="@id/iv_thumb"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_normal"
            android:maxLines="2"
            tools:text="Name" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
